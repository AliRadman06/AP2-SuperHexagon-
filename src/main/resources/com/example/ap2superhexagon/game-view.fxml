<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="576.0" prefWidth="1024.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ap2superhexagon.GameController">
    <children>

        <Pane fx:id="gamePane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

        <Label fx:id="yourRecordLabel" text="Your Record" textFill="WHITE" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="25.0">
            <font>
                <Font name="Algerian" size="23.0" />
            </font>
        </Label>
        <Label fx:id="scoreLabel" alignment="CENTER" prefWidth="150.0" text="0" textFill="WHITE" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="25.0">
            <font>
                <Font name="Algerian" size="23.0" />
            </font>
        </Label>

        <Label fx:id="bestRecordLabel" text="Best Record" textFill="WHITE" AnchorPane.bottomAnchor="40.0" AnchorPane.rightAnchor="25.0">
            <font>
                <Font name="Algerian" size="23.0" />
            </font>
        </Label>
        <Label fx:id="bestScoreLabel" alignment="CENTER" prefWidth="150.0" text="0" textFill="WHITE" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="25.0">
            <font>
                <Font name="Algerian" size="23.0" />
            </font>
        </Label>

        <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#handlePauseButton" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;" text="" AnchorPane.leftAnchor="24.0" AnchorPane.topAnchor="16.0">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="153.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/pause-button.png" />
               </image>
            </ImageView>
         </graphic></Button>

    </children>
</AnchorPane>
